<%include ../partials/header.ejs%>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead"> YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">info 1</li>
                <li class="list-group-item">info 2</li>
                <li class="list-group-item">info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <img class="img-responsive" src="<%=campground.img%>">
                <div class="caption-full">
                    <h4 class="text-right">9/night</h4>
                    <h4><a><%=campground.name%></a></h4>
                    <p><%=campground.discription%></p>
                    <p>
                        <em>Submitted By <%=campground.author.username%></em>
                    </p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campground/<%=campground._id%>/comments/new">Add new Comments</a>

                </div>
                <hr>
                <% campground.comments.forEach(function(comment){%>
                <div >
                    <div class="col-md-12"></div>
                    <strong><%=comment.author.username%></strong>
                    <span class="text-right">10 days ago</span>
                    <p><%=comment.text%></p>
                </div>
                
                <%})%>
            </div>
        </div>
    </div>
    
</div>






<%include ../partials/footer.ejs%>