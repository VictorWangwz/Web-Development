<%include ../partials/header.ejs%>

<div class="container" >
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to yelpcamp</h1>
            <p>View your pictures</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campground/new">Add new campgrounds</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular campgrounds</h3>
        </div>
    </div>
    
    
    <div class="row" style="display:flex;flex-wrap:wrap;">
        <%campgrounds.forEach(function(campground){%>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail">
                    <img src="<%=campground.img%>" width="100%">
                    <div class="caption">
                        <h4><%=campground.name%></h4>
                    </div>
                    <p>
                        <a href="/campground/<%=campground.id%>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <%});%>
    </div>
    
    

</div>







<%include ../partials/footer.ejs%>