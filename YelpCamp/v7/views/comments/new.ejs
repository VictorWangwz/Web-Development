
<%include ../partials/header.ejs%>
<div class="container">
   <div>
        <h1 style="text-align:center">Add new comments to <%= campground.name%></h1>
        <div style="width:30%;margin:10% auto">
            <form action="/campground/<%=campground._id%>/comments" method="POST">
                 <div class="form-group">
                     <input class="form-control" type="text" name="comment[text]" placeholder="text">
                 </div>
                <div class="form-group">
                    <input  class="form-control" type="text" name="comment[author]" placeholder="author">
                </div>
        
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campground">Back</a>
        </div>
   </div>
</div>


<%include ../partials/footer.ejs%>