
<%include ./partials/header%>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title%></div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="filed">
            <label>Title</label>
            <input type="text", name="blog[title]" value="<%=blog.title%>">
        </div>
        <div class="filed">
            <label>Img</label>
            <input type="text", name="blog[img]" value="<%=blog.img%>">
        </div>
        <div class="filed">
            <label>Blog Content</label>
            <textarea name="blog[body]"><%=blog.body%></textarea>
            
        </div>
        <button class="ui inverted red button">SUBMIT</button>
    </form>
</div>


<%include ./partials/footer%>