<%include ./partials/header%>
<div class="ui main text container">
 <div class="ui huge header">Rest blog app </div>
 <div class="ui top attached segment">
  <div class="ui divided item">
    <%blogs.forEach(function(blog){%>

    <div class="item segment">
     <div class="content">
      <a class="header title" href="/blogs/<%=blog._id%>"><%=blog.title%></a>
      <div class="meta">
      <span><%=blog.created.toDateString()%></span>
      </div>
     </div>
     
     
     <div class="image"><img src="<%=blog.img%>"></div>
     <div class="description">
     <p><%=blog.body%></p></div>
     <div class=extra>
      <a class="ui floated basic violet button" href="/blogs/<%=blog._id%>">link<i class="right chevron icon"></i></a>
      
     </div>
     
    </div>
    <%})%>
  </div>
 </div>
</div>

<%include ./partials/footer%>